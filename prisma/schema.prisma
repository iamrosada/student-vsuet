generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"

  url = "file:./database.db"
}

model Student {
  id              Int     @id @default(autoincrement())
  email           String  @unique
  telephone       String  @unique
  IdStudent       String  @unique
  firstName       String
  lastName        String
  ageStart        String
  ageFinish       String
  country         String
  whereLive       String
  fullNameInLatin String
  diplomIsRed     Boolean

  whereDidThePreparatory String
  group                  String

  Languages Languange[]
  Courses   Course[]
}

model Languange {
  id             Int     @id @default(autoincrement())
  language       String
  languageId     Int
  speak          Student @relation(fields: [languageId], references: [id])
  nativeLanguage String
  otherLanguage  String
}

model Course {
  id            Int     @id @default(autoincrement())
  course        String
  courseId      Int
  graduation    String
  mastersDegree String
  formation     Student @relation(fields: [courseId], references: [id])
}
